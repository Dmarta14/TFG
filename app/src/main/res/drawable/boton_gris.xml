<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando el bot칩n est치 presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/> <!-- Color m치s oscuro al presionar -->
            <corners android:radius="0dp"/> <!-- Bordes redondeados -->
            <stroke android:width="2dp" android:color="#808080"/> <!-- Borde gris oscuro -->
